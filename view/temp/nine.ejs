<div id="cl-wrapper" class="print-hide">
  <form name="register" action="/admin/dealer/nine" class="form-horizontal">
    <div id="pcont" style="margin:0px;" class="container-fluid">
      <div class="page-head">
        <h2>活动实施</h2>
        <ol class="breadcrumb">
          <li><a href="/admin/index">首页</a></li>
          <li class="active">活动实施</li>
        </ol>
      </div>
      <div class="cl-mcont">
        <div class="row">
          <div class="col-sm-4 col-print-4">
            <div class="block-flat">
              <div class="header">
                <h3>注册来源</h3>
              </div>
              <div class="content">
                <table class="no-border">
                  <tbody class="no-border-y">
                    <tr>
                      <td>经销商名称</td>
                      <td><%=dealer%></td>
                    </tr>
                    <tr>
                      <td>经销商编号</td>
                      <td><%=dealer_id%></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="col-sm-4 col-print-4">
            <div class="block-flat">
              <div class="header">
                <h3>
                  <% if(user == null) {%>
                  <input type="checkbox" name="all" checked="checked"/><span style="font-size:12px">  全选  </span>
                  <%}%>
                  32项检测项目
                </h3>
              </div>
              <div class="content">
                <ul style="list-style:none;margin:0px;padding:0px;" class="all32">
                  <% if(user == null) {%>
                  <% for (var i = 0; i < thirlist.length; i++) {%>
                  <li>
                    <label>
                      <input type="checkbox" name="thir[<%=i%>]" value="<%=i%>" checked="checked"/> <%=thirlist[i]%>
                    </label>
                  </li>
                  <%};%>
                  <%}else{%>
                  <% for (var i = 0; i < user.thir.length; i++) {%>
                  <li>
                    <label><%=thirlist[parseInt(user.thir[i])]%></label>
                  </li>
                  <%};%>
                  <%}%>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-sm-4 col-print-4">
            <div class="block-flat">
              <div class="header">
                <h3>注册信息</h3>
              </div>
              <div class="content">
                <% if(user!=null) {%>
                <table class="no-border">
                  <tbody class="no-border-y">
                    <tr>
                      <td>姓名</td>
                      <td><%=user.othername%></td>
                    </tr>
                    <tr>
                      <td>手机号码</td>
                      <td><%=user.othermobile%></td>
                    </tr>
                    <tr>
                      <td>车架号(后六位)</td>
                      <td><%=user.vin%></td>
                    </tr>
                    <tr>
                      <td>行驶里程</td>
                      <td><%=user.mileage%>Km</td>
                    </tr>
                    <tr>
                      <td>车型</td>
                      <td><%=type[parseInt(user.cartype)-1].name%></td>
                    </tr>
                  </tbody>
                </table>
                <!-- <button type="button" class="btn btn-primary print-btn">打印</button> -->
                <div id="swfContent"  align="center"></div>
                <% }else{%>
                <div class="form-group">
                  <label class="col-sm-3 control-label">姓名</label>
                  <div class="col-sm-9">
                    <input type="text" name="othername" value="" placeholder="到店用户姓名" class="form-control"/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">手机号码</label>
                  <div class="col-sm-9">
                    <input type="text" maxlength="11" name="othermobile" value="" placeholder="到店用户手机号码" class="form-control"/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">车架号(后六位)</label>
                  <div class="col-sm-9">
                    <input type="text" maxlength="6" name="vin" placeholder="VIN码" class="form-control"/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">行驶里程</label>
                  <div class="col-sm-9">
                    <input type="text" maxlength="6" name="mileage" placeholder="行驶里程" class="form-control"/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">客服代表</label>
                  <div class="col-sm-9">
                    <input type="text" name="customer" placeholder="客服代表姓名" class="form-control"/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">车型</label>
                  <div class="col-sm-9">
                    
                    <select name="cartype" class="form-control">
                      <option value="">请选择车型</option>
                      <% for(var i=0;i<type.length;i++) {%>
                      <option value="<%=type[i].type%>")><%=type[i].name%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
                <button type="button" class="btn btn-primary submit">提交</button>
                <% }%>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </form>
</div>

<script>
  <%if (user != null) {%>
  function backjson() {
    var bk = {"code":"<%=user.code%>","othername":"<%-user.othername%>","othermobile":"<%-user.othermobile%>", "vin": "<%-user.vin%>", "mileage": "<%-user.mileage%>", "customer": "<%-user.customer%>","imp_at":"<%-user.imp_at%>","reser_at":"<%-user.reser_at%>","create_at":"<%-user.create_at%>","thir":[<%-user.thir%>],"tenoff": <%-user.tenoff%>,"changed": <%-user.changed%>,"cartype":<%-user.cartype%>,"lot":"","dealer":"<%-dealer%>","dealer_id":"<%-dealer_id%>"};
    bk.imp_at = getDates(new Date(bk.imp_at));
    bk.reser_at = getDates(new Date(bk.reser_at));
    bk.create_at = getDates(new Date(bk.create_at));
    return JSON.stringify(bk);
  }
  <%}%>
  $(document).ready(function(){
      $(".print-btn").click(function(){window.print()});
      $("[name=all]").bind("click",function(){
        if ($(this).is(":checked")) {
          console.log("aa");
          $(".all32 input").each(function(){
            $(this).prop('checked', true);
          });
        }else {
          $(".all32 input").removeAttr("checked","checked");
        }
      });
      $(".all32 input").bind("click",function(){
        if ($(".all32 :checked").length < 32) {
          $("[name=all]").prop('checked', false);
        }else{
          $("[name=all]").prop('checked', true);
        }

      });
      $(".submit").click(function(){
        if ($("[name=cartype]").val() == "")
        {
          alert("请选择车型");
          return "";
        }
        $.ajax({
          url:$('[name=register]').attr("action"),
          type: 'POST',
          data: $('[name=register]').serializeArray(),
          dataType: 'json',
          context: $('body'), 
          success: function(msg){
            if (msg.recode == 200){
              window.location.href = "/admin/dealer/nine/"+msg.reason;
            }else{
              alert(msg.reason);
            }
          }
        });
      });
    });
</script>
