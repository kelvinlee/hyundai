	script.
		$(document).ready(function(){
		//initialize the javascript
			App.init();
			App.dataTables();
			$("[placeholder=Search]").attr("placeholder","查询");
		}); 
		function searchdate() {
			if ($("[name=startime]").val() !="" && $("[name=endtime]").val() !="") {
				//- $("[name=startime]").val()+" 0:0:0"
				var _s = NewDate($("[name=startime]").val(),"0:0:0");
				var _e = NewDate($("[name=endtime]").val(),"23:59:59");
				window.location.href = "/admin/dealer?startime="+(_s.getTime())+"&endtime="+(_e.getTime())+"&type="+$("[name=type]").val();
			}else if($("[name=startime]").val() =="" && $("[name=endtime]").val() ==""){
				window.location.href = "/admin/dealer?startime=&endtime=&type="+$("[name=type]").val();
			}else {
				alert("请选择时间范围后查询.");
			}
		}
		function setTimepost(o) {
			var val = $(o).parents("tr").find("[name=reser]").val();
			//- console.log(val);
			if (val == "") {
				alert("请选择预约日期");
				return false;
			}
			$.ajax({
				url:$(o).attr("href"),
				type: 'POST',
				data: [{name:"timer",value:val}],
				dataType: 'json',
				context: $('body'), 
				success: function(msg){
					if (msg.recode == 200){
						window.location.reload();
					}else{
						alert(msg.reason);
					}
				}
			});
			return false;
		}
		function printtable() {
			$("#printtable").remove();
			newtable = $("#datatable").clone().attr("id","printtable");
			newtable.addClass("print-visible");
			$("body").append(newtable);
			window.print();
		}
		function NewDate(str,hour) { 
			str = str.split('-'); 
			var date = new Date(); 
			date.setUTCFullYear(str[0], str[1] - 1, str[2]); 
			hour = hour.split(':');
			date.setUTCHours(hour[0], hour[1], hour[2], 0); 
			return date; 
		} 
    
